---
interface Props {
    title: string;
    summary: string;
    user: string;
}

const { title, summary, user } = Astro.props;
---
<li>
    <article class="flex gap-4 rounded-2xl p-4 bg-secundary-bg">
        <div class="bg-white w-20 h-30"/>
        <div>
            <h2 class="text-xl font-black">{title}</h2>
            <h3 class="italic font-semibold">{user}</h3>
            <p>{summary}</p>
        </div>
    </article>
</li>
